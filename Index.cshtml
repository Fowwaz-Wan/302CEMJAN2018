<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="navbar-header">

            <div style="margin-left:50px; width:100%; padding:5px; position:absolute; top:0; z-index:-1000; margin-top:10px">

                <img src='@ViewBag.VLogo' style="height:25px;" />

            </div>

            @*<div style="margin:15px 0px 0px 250px; color:yellow; font:5px">
                @Html.Label((string)@ViewBag.VApplication)
            </div>*@

        </div>


        <div class="navbar-collapse collapse">
            <div style="margin-right:150px">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                </ul>
            </div>

        </div>

    </div>
    <br /><br /><br />
    <div class="content">
        <div class="row">

            <div class="col-md-6 col-md-offset-6 col-xs-12">
                <div class="pull-right">
                    <div style="color:yellow">
                        <h1> @ViewBag.VApplication</h1>
                        <div style="color:greenyellow">
                            <h4>@foreach (string line in ViewBag.VApplDesc1)
                            {
                                @Html.Label(line)
                                <br />
                            }</h4>                            
                        </div>
                    </div>
                </div>
            </div>

        </div>

        @*//Login section control*@
        <div class="row">
            <div class="col-md-3 col-md-offset-05 col-sm-6 col-xs-12">
                @using (Html.BeginForm())
                {
                    <div class="box" style="border-radius:5px;">
                        <div class="box-header with-border" style="height:40px">
                            <h3 class="box-title">Sign in</h3>
                        </div>
                        
                          <div class="box-body" >
                                
                                <div class="form-group has-feedback">
                                    <input class="form-control" placeholder="UserID Or Email" id="txtUsername" name="txtUsername">
                                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                                </div>


                                <div class="form-group has-feedback">
                                    <input type="password" class="form-control" placeholder="Password" id="txtPassword" name="txtPassword" />
                                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                </div>


                                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                                <div class="row">
                                    <br/>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger blink_text" })
                                </div>
                            
                            </div>
                    </div>

                }
                </div>
            </div>

        <br /><br /><br />
        <div class="row">
            <div class="col-md-6 col-md-offset-05 col-xs-12">
                <div class="box" style="border-radius:5px;">
                    <div class="box-header with-border">
                        <h3 class="box-title">Announcements:</h3>
                    </div>
                    <div class="box-body" style="min-height:150px">
                        @*<h4>
                            • T_StencilTension latest version - Icon based, Dropdown from LineMaster <br />

                            <br />
                            • Fixed Location Master, Defect Code <br />

                            <br />
                            • Controllers <br />
                            -> HomeController.cs - Added ViewBag.VMenuController <br />

                            <br />
                            • Views <br />
                            - Deleted all Delete.cshtml files <br />
                            - Removed all CreatedBy, UpdatedBy, CreatedDate, UpdatedDate codes <br />
                            -> Home - Added link path 'ViewBag.VMenuController' <br />
                            
                        </h4>*@
                        @Html.TextAreaFor(model => model.ControlValue, new { style = "min-height: 120px; font-size: 18px;", @class = "form-control", @readonly = true })
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalError" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        Invalid User Id or Password !!! Please try again.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline" data-dismiss="modal">Ok</button>
                    </div>
                </div>

            </div>
            <!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <div class="row">
            <div class="col-md-5 col-md-offset-05 col-xs-6">
                <span style="font-size:15px;color:white;"><b>Sponsored by</b></span>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="pull-right">
                    <span style="font-size:15px;color:white;"><b>@ViewBag.VCompanyDesc</b></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 col-md-offset-05 col-xs-6">
                <span style="font-size:20px;color:yellow;"><b>@ViewBag.VSponsor</b></span>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="pull-right">
                    <span style="font-size:15px;color:yellow;"><b>&copy;  @ViewBag.VCopyRight</b></span>
                </div>
            </div>
        </div>

        @*<div class="row">
                <div style="margin-left:50px; font-size:15px; font-weight:bold; color:white; float:left;  height:0px; margin-bottom:55px; padding-bottom:0px; position:fixed; bottom:10px; left:0;">Sponsored By</div>
                <div style="margin-right:95px; font-size:15px; font-weight:bold; color:white; float:right;  height:0px; margin-bottom:45px; padding-bottom:0px; position:fixed; bottom:10px; right:0;"> @ViewBag.VCompanyDesc </div>


